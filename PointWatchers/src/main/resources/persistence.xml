<persistence version="1.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name='pointwatchers'>
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <properties>
            <property name="connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="connection.url" value="jdbc:mysql://localhost/pointwatchers"/>
            <property name="connection.username" value="pointwatchers"/>
            <property name="connection.password" value="pointwatchers"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.sho" value="true"/>
        </properties>
    </persistence-unit>
</persistence>